<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="fontFamily">@font/lusitana_regular</item>
        <item name="android:fontFamily">@font/lusitana_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.H1" parent="Text">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="Text.H2" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H3" parent="Text">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H4" parent="Text">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/moselle_green</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/lusitana_regular</item>
    </style>

    <style name="ClickedChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/medium_grey_green</item>
        <item name="rippleColor">@color/moselle_green</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
        <item name="chipStartPadding">@dimen/_4sdp</item>
        <item name="chipEndPadding">@dimen/_4sdp</item>
    </style>

    <style name="NotClickedChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/moselle_green</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
        <item name="android:textAppearance">@style/CustomChipTextAppearance</item>
        <item name="chipStartPadding">@dimen/_4sdp</item>
        <item name="chipEndPadding">@dimen/_4sdp</item>
    </style>

    <style name="CustomChipTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/lusitana_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlayChip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/drawable_search_cursor</item>
        <item name="fontFamily">@font/lusitana_regular</item>
        <item name="android:fontFamily">@font/lusitana_regular</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

</resources>