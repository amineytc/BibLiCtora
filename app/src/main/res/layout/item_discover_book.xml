<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <com.amineaytac.biblictora.ui.discover.BookItemLayout
        android:id="@+id/bookItemLayout"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_8sdp">

        <com.amineaytac.biblictora.ui.discover.HeartView
            android:id="@+id/heartView"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:contentDescription="@string/heart_view" />

        <FrameLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="top|end">

            <ProgressBar
                android:id="@+id/progressBarPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.amineaytac.biblictora.ui.discover.BookPictureView
                android:id="@+id/pictureView"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp" />
        </FrameLayout>


        <TextView
            android:id="@+id/tvName"
            style="@style/Text.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            tools:text="Charles Dickens" />

    </com.amineaytac.biblictora.ui.discover.BookItemLayout>
</FrameLayout>